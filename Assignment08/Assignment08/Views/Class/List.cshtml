@model  IEnumerable<Assignment08.Models.Class>
@using Assignment08.Helpers

@{
    ViewBag.Title = "All Classes";
}

<h2>All Classes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            # of Students
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayDateOnlyFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (item.Students != null)
                {
                    @item.Students.Count();
                }
                else
                {
                    @:0
                }
            </td>
            <td>@Html.ActionLink("Details", "Details", new { classId = item.Id })</td>
        </tr>
    }

</table>