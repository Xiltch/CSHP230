<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">


        @Html.ActionLink("Final Project", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav mr-auto">
                @if (Session["currentUser"] == null)
                {
                    <li class="nav-item">@Html.ActionLink("Login", "Index", "Login", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("New Login", "Request", "Login", null, new { @class = "nav-link" })</li>

                }
                else
                {
                    <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Login", null, new { @class = "nav-link" })</li>
                }
                <li class="nav-item">@Html.ActionLink("Classes", "List", "Class", null, new { @class = "nav-link" })</li>
                @if (Session["currentUser"] != null)
                {
                    <li class="nav-item">@Html.ActionLink("My Classes", "Mine", "Class", null, new { @class = "nav-link" })</li>
                }
            </ul>
        </div>
    </nav>

    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Jonathan Tweedle</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>